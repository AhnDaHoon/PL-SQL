CREATE OR REPLACE PROCEDURE QUERY_INFO (IEMPNO EMP.EMPNO%TYPE)

IS
	VEMPNO EMP.EMPNO%TYPE;
	VSAL EMP.SAL&TYPE;
	VDNAME DEPT.DNAME%TYPE;
	VLOC DEPT.LOC%TYPE;

BEGIN

	SELECT E.EMPNO, E.SAL, D.DNAME, D.LOC
		INTO VEMPNO, VSAL, VDNAME, VLOC
	FROM EMP E, DEPT D
	WHERE E.DEPTNO = D.DEPTNO AND E.EMPNO = IEMPNO;

	DBMS_OUTPUT.PUT_LINE('사번: '|| VEMPNO);
	DBMS_OUTPUT.PUT_LINE('급여: '|| VSAL);
	DBMS_OUTPUT.PUT_LINE('부서명: '|| VDNAME);
	DBMS_OUTPUT.PUT_LINE('위치: '|| VLOC);

END;
/